<%- include('partials/header') %>

<main class="container my-5">
  <!-- Hero Section -->
  <section class="hero text-center">
    <h1 class="display-4 fw-bold">Intelligent Scrap Material Trading</h1>
    <p class="lead text-muted mt-3">Transform the way you buy and sell scrap materials with our AI-powered marketplace. Get real-time pricing, market trends, and material identification.</p>
    <div class="cta-buttons mt-4">
      <a href="/register" class="btn btn-primary btn-lg me-2">Get Started</a>
      <a href="/materials" class="btn btn-outline-secondary btn-lg">Browse Materials</a>
    </div>
  </section>

  <!-- Features Section (Buy and Sell Cards) -->
  <section class="features mt-5">
    <div class="row">
      <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm text-white" style="background-color: #28a745; border: none;">
          <div class="card-body">
            <h5 class="card-title">Buy Material</h5>
            <ul class="list-unstyled">
              <li>All WasteTrade buyers are fully accredited and certified</li>
              <li>Access to thousands of year-round listings</li>
              <li>Filter by specific materials to find suitable listings</li>
            </ul>
            <a href="/market" class="btn btn-success mt-3">Buy</a>
          </div>
        </div>
      </div>
      <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm text-white" style="background-color: #28a745; border: none;">
          <div class="card-body">
            <h5 class="card-title">Sell Material</h5>
            <ul class="list-unstyled">
              <li>Access our global network of verified recycling facilities</li>
              <li>Maximise the value of your commodities</li>
              <li>Recycle your materials ethically with a carbon-efficient circular economy</li>
            </ul>
            <a href="/register" class="btn btn-success mt-3">Sell</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Materials Section -->
  <section class="materials mt-5">
    <h2 class="text-center mb-4">Material Categories</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <div class="col">
        <div class="card h-100 text-center">
          <div class="card-body">
            <h5 class="card-title">Metal Scrap</h5>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100 text-center">
          <div class="card-body">
            <h5 class="card-title">Construction Materials</h5>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100 text-center">
          <div class="card-body">
            <h5 class="card-title">Plastic Scrap</h5>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100 text-center">
          <div class="card-body">
            <h5 class="card-title">Automotive Scrap</h5>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100 text-center">
          <div class="card-body">
            <h5 class="card-title">Electronic (E-Waste)</h5>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100 text-center">
          <div class="card-body">
            <h5 class="card-title">Packaging Materials</h5>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

